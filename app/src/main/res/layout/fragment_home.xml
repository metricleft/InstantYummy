<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewHomePageLabelHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Home"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonHomeViewPantry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewHomePageLabelHome"
        android:layout_marginTop="150dp"
        android:text="Pantry" />

    <Button
        android:id="@+id/buttonHomeViewRecipes"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonHomeViewPantry"
        android:layout_alignStart="@+id/buttonHomeViewPantry"
        android:layout_alignEnd="@+id/buttonHomeViewPantry"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="-20dp"
        android:text="Recipes" />

    <Button
        android:id="@+id/buttonHomeViewFeaturedDishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonHomeViewRecipes"
        android:layout_alignStart="@+id/buttonHomeViewRecipes"
        android:layout_alignEnd="@+id/buttonHomeViewRecipes"
        android:layout_marginStart="-19dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="-19dp"
        android:text="Featured Dishes" />
